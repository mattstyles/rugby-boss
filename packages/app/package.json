{
  "name": "rugby-boss",
  "private": true,
  "version": "0.0.0",
  "description": "Rugby management simulation",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rimraf dist && mkdirp dist",
    "prebuild": "npm run clean",
    "build": "NODE_PATH=src NODE_ENV=production browserify --extension jsx src/main.js | uglifyjs -cm > dist/main.js && ncp src/index.html dist/index.html && ncp src/assets dist/assets",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "start": "NODE_PATH=src DEBUG=true bin/start"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "urban"
    ],
    "plugins": [
      "babel-plugin-styled-components",
      "transform-react-require",
      "lodash"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/rugby-boss.git"
  },
  "keywords": [
    "raid",
    "react",
    "game",
    "rugby"
  ],
  "author": "mattstyles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/rugby-boss/issues"
  },
  "homepage": "https://mattstyles.github.io/rugby-boss",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^1.0.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "budo": "^9.4.7",
    "create-raid-app": "2.10.0",
    "envify": "^4.1.0",
    "gh-pages": "^1.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "eventemitter3": "^2.0.3",
    "lodash": "^4.17.4",
    "most": "^1.7.2",
    "open-color": "^1.5.1",
    "prop-types": "^15.5.10",
    "raid": "^2.10.0",
    "raid-addons": "^2.10.0",
    "raid-fl": "^2.10.0",
    "raid-navigator": "^2.10.0",
    "raid-streams": "^2.10.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "reselect": "^2.5.4",
    "styled-components": "^2.2.3"
  }
}
